generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String    @id @default(cuid())
  email         String    @unique @db.VarChar(320)
  first_name    String    @map("first_name") @db.VarChar(50)
  last_name     String    @map("last_name") @db.VarChar(50)
  phone         String    @unique @db.VarChar(15)
  password      String    @db.VarChar(255)
  is_online     Boolean   @default(true) @map("is_online")
  created_at    DateTime  @default(now()) @db.Timestamp(0)
  updated_at    DateTime  @updatedAt @db.Timestamp(0)

  // Add the missing relation
  accountSettings AccountSettings[]

  @@index([is_online])
  @@index([phone])
}

model AccountSettings {
  id                     String    @id @default(cuid())
  user_id                String    @map("user_id")
  
  // Fixed relation - correct field name and unique constraint
  user                   Users     @relation(fields: [user_id], references: [id])
  is_account_deactivated Boolean   @default(false) @map("is_account_deactivated")
  is_darkmode            Boolean   @default(false) @map("is_darkmode")

  @@unique([user_id])
}